<%= render "shared/errors", obj: @category %>

<%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |i| %>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= i.label :name %>
    </div>
    <div class="col-sm-7">
      <%= i.text_field :name, class: "form-control", placeholder: "Enter category name", autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-10">
      <%= i.submit class: "btn btn-primary btn-lg"  %>
    </div>
  </div>

    
<% end %>
  
  <div class="col-xs-4 col-xs-offset-4">
    [<%= link_to "Cancel request and return to articles listing", articles_path %>]
  </div>